<div class="card">
  <div class="card-body">
    <div class="display-5 text-center">Welcome Restaurateur!</div>
    <br>
    <div class="display-6 text-center">Sign In</div>
    <br>
    <%if @error%>
      <div class="alert alert-danger"><%=@error%></div>
    <%end%>
    <%=form_tag restaurant_sessions_path, class:'form-group' do%>
      <%= text_field_tag :email, nil, class:'form-control', placeholder:'Email Address', :required => true %>
      <br>
      <%= password_field_tag :password , nil, class:'form-control', placeholder:'Password', :required => true %>
      <br>
      <%=submit_tag 'Log In', class: "btn btn-primary"%>
    <%end%>
    <br>
      <%=form_tag restaurant_sessions_path, class:'form-group' do%>
      <%=hidden_field_tag :email, 'mourad@mouradsf.com'%>
      <%=hidden_field_tag :password, '12345'%>
      <%=submit_tag 'Skip Login (Demo Account)', class: "btn btn-success"%>
    <%end%>
    <div class="text-center display-7">
      <p>Don't Have an Account? <%=link_to 'Sign Up', new_restaurant_path%></p>
    </div>
  </div>
</div>