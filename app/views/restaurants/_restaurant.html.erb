<div class="col-md-3">
  <div class="card text-center">
    <%=link_to(image_tag(restaurant.picture, size: "340x270"), restaurant_path(restaurant) ,:class=>"card-img-top") %>
    <div class="card-body">
      <h5 class="card-title"><%=restaurant.name.capitalize%></h5>
      <p class="card-text"><%=link_to restaurant.city.name.capitalize, city_restaurants_path(restaurant.city)%></p>
    </div>
  </div>
</div>
 
 