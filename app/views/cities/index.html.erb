<div class="card-deck">
 <div class="row">
<%@cities.each do |city|%>
 <div class="col-md-3">
  <div class="card text-center">
       <%=image_tag city.picture, size: "340x270" ,:class=>"card-img-top" if city.picture != nil%>
    <div class="card-body">
      <h5 class="card-title"><%=city.name.capitalize%></h5>
    </div>
  </div>
    </div>
 <%end%>
</div>
</div>